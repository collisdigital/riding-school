{
"name": "Riding School Dev Stack",
  "image": "mcr.microsoft.com/playwright:v1.58.2-noble",
  "features": {
    "desktop-lite": {
      "webPort": "6080"
    },
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/va-h/devcontainers-features/uv:1": {},
    "ghcr.io/devcontainers/features/git-lfs:1": {},
    "ghcr.io/guiyomh/features/just:0": {},
    //"ghcr.io/itsmechlark/features/postgresql:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": 
    {
      "moby": false
    }
  },
  "forwardPorts": [5173, 8000, 5432, 6080],
  //"postCreateCommand": "cd backend && pip install -r requirements.txt && cd ../frontend && npm install",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-playwright.playwright",
        "ms-azuretools.vscode-containers",
        "charliermarsh.ruff",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ckolkman.vscode-postgres",
        "bierner.markdown-mermaid",
        "rangav.vscode-thunder-client"
      ],
      "settings": {
        "editor.rulers": [80, 120],
        "pgsql.serverGroups": [
          {
            "name": "Servers",
            "id": "4A344A32-01A5-4F38-A0FB-08085161641B",
            "isDefault": true
          }
        ],
        "pgsql.connections": [
          {
            "id": "24340724-3BC4-4BB4-BE4B-C7DEAE68CE02",
            "groupId": "4A344A32-01A5-4F38-A0FB-08085161641B",
            "authenticationType": "SqlLogin",
            "connectTimeout": 15,
            "applicationName": "vscode-pgsql",
            "clientEncoding": "utf8",
            "sslmode": "prefer",
            "sshSavePassword": true,
            "savePassword": true,
            "sslRootCertMode": "none",
            "connectionString": "postgresql://postgres:postgres@localhost:5432/riding_school",
            "server": "localhost",
            "user": "postgres",
            "port": "5432",
            "database": "riding_school",
            "password": "postgres",
            "profileName": "riding-school",
            "expiresOn": 0,
            "sshPassword": ""
          }
        ]
      }
    }
  }
}
